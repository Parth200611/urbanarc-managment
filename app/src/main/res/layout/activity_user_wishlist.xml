<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
         android:text="Your Dream Product Are Here !"
         android:textColor="@color/green"
         android:textSize="21dp"
         android:layout_marginTop="16dp"
         android:id="@+id/svUserhomefargmentrsearchproduct"
         android:textStyle="bold"
       android:layout_marginStart="8dp"
         />


      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/rvUserwishlistrecyclerlist"
          android:layout_marginTop="16sp"
          android:layout_below="@id/svUserhomefargmentrsearchproduct"
          android:visibility="visible"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="No Product"
          android:textSize="30dp"
          android:textColor="@color/grey_font"
          android:visibility="gone"
          android:id="@+id/tvnoorders"
          android:layout_marginBottom="30dp"
          />


</RelativeLayout>