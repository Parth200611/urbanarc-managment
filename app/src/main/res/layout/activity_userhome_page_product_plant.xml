<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.UserhomePageProductPlant">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserHomepagePlantProductName"
            android:text="Product Name"
            android:layout_marginTop="30sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            android:textStyle="bold"
            /><TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUserHomepagePlantProductName"
        android:id="@+id/tvUserHomepageProductPlantDiscription"
        android:text="Product Discription"
        android:layout_marginTop="10sp"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        />
        <ImageView
            android:id="@+id/ivPlantheartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heratoutlin"
            android:clickable="true"
            android:layout_marginTop="130dp"
            android:layout_marginStart="450sp"
            android:focusable="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="600sp"
            android:id="@+id/ivUserHomepageProductPlantDetailsSofaimage"
            android:layout_below="@id/tvUserHomepageProductPlantDiscription"
            android:layout_marginTop="40sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ivUserHomepageProductPlantDetailsSofaimage"
            android:layout_marginTop="20sp"
            android:id="@+id/linerlayout11"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserHomepageProductPlantPrice"
                android:text="Product price"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserHomepageProductPlantRating"
                android:text="Rating"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:background="@color/green"
                android:drawableRight="@drawable/icon_star"
                android:drawablePadding="3dp"
                android:textColor="@color/white" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linerlayout11"
            android:id="@+id/tvUserHomepageProductPlantshopname"
            android:text="Shopname"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_marginBottom="8sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUserHomepageProductPlantshopname"
            android:id="@+id/tvUserHomepageProductPlantoffer"
            android:text="offer"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linerlayout12"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:id="@+id/btnUserHomepageProductPlantBuyNow"
            android:text="Buy Now"
            android:background="@color/yellow"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnUserHomepageProductPlantBuyNow"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:id="@+id/btnUserHomepageProductPlantAddtoCart"
            android:text="Add to Cart"
            android:background="@drawable/buttonshape"
            android:textColor="@color/yellow"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvUserHomepageProductPlantoffer"
            android:id="@+id/linerlayout12"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="Delivery:"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:drawableLeft="@drawable/icon_delivery"
                android:textColor="@color/black"
                android:drawablePadding="5sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserHomepageProductPlantdelivery"
                android:text="Delivery:"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.urbanarc.com"
            android:layout_marginTop="20sp"
            android:layout_below="@id/btnUserHomepageProductPlantAddtoCart"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:drawablePadding="5sp"
            android:layout_marginStart="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            />



    </RelativeLayout>


</ScrollView>