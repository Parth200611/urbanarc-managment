<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CvrvUsercategorywiseproductcard"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_marginStart="10sp"
                android:id="@+id/rvUserCategoryWiseProsuct"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvrvUserCategoryProductName"
                android:text="Product Name"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="140dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tvrvUserCategoryProductName"
                android:layout_marginStart="140dp"
                android:layout_marginTop="6dp"
                android:id="@+id/linerlayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvUserFragmentCategoryProductPrice"
                    android:text="Product price"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvUserFragmentCategoryProductRating"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="106dp"
                    android:background="@color/green"
                    android:drawableRight="@drawable/icon_star"
                    android:drawablePadding="3dp"
                    android:textColor="@color/white" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rvUserCategoryProductoffer"
                android:layout_below="@+id/linerlayout"
                android:text="offer"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="140dp"
                android:textColor="@color/blue"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/rvUserCategoryProductoffer"
                android:layout_marginStart="140dp"
                android:layout_marginTop="6dp"
                android:id="@+id/linerlayout2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery:"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvUserFragmentCategoryProductDelivery"
                    android:text="Day"
                    android:textSize="14sp"
                    android:drawablePadding="3dp"
                    android:textColor="@color/black" />
            </LinearLayout>



        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>