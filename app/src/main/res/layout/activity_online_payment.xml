<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User.OnlinePaymentActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPI Id For Payment"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16sp"
        android:layout_marginTop="20sp"
        />
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy UIP Id For Payment and Past on your payment source pay your bill"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="12sp"
     android:layout_marginEnd="50sp"
        /> <TextView
    android:id="@+id/tvUpiId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="UPI ID: your-upi-id@bank"
    android:textSize="16sp"
    android:textColor="#000000"
    android:textStyle="bold"
    android:paddingBottom="10dp"
    android:layout_marginStart="16sp"
    android:layout_marginTop="10dp"
    android:background="@drawable/buttonshape"
    android:padding="8sp"/>

    <!-- Copy and Pay Button -->
    <Button
        android:id="@+id/btnCopyPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy and Pay"
        android:backgroundTint="@color/yellow"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="16sp"
        android:textSize="16sp" />

</LinearLayout>