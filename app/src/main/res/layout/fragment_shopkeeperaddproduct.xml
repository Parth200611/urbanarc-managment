<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Shopkeeper.shopkeeperaddproductFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Product"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="26dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Category"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            />
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/serch"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_margin="8dp"
            android:hint="Shop Name"
            android:id="@+id/etshopname"
            android:background="@drawable/serch"
            android:padding="12dp"
            /> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_margin="8dp"
            android:hint="Product Name"
            android:id="@+id/etProductname"
            android:background="@drawable/serch"
            android:padding="12dp"
            /> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_margin="8dp"
            android:hint="Product Price"
            android:id="@+id/etProductPrice"
            android:background="@drawable/serch"
            android:padding="12dp"
            /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Discription"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_margin="8dp"
            android:hint="Product Discription"
            android:id="@+id/etProductdiscription"
            android:background="@drawable/serch"
            android:padding="12dp"
            /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Offer"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_margin="8dp"
            android:hint="Product Offer"
            android:id="@+id/etProductOffer"
            android:background="@drawable/serch"
            android:padding="12dp"
            /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Rating"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_margin="8dp"
            android:hint="Product Rating"
            android:id="@+id/etProductRating"
            android:background="@drawable/serch"
            android:padding="12dp"
            /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deliver Day"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_margin="8dp"
            android:hint="Product Delivery"
            android:id="@+id/etDelivery"
            android:background="@drawable/serch"
            android:padding="12dp"
            /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Image"
            android:textSize="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
        android:textColor="@color/green"
        android:textStyle="bold"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            android:id="@+id/ivImage"
            android:src="@drawable/baseline_camera_alt_24"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image"
            android:id="@+id/btnAddImage"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/btnAddProduct"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            />


    </LinearLayout>




</ScrollView>