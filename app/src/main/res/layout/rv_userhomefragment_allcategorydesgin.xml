<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!-- Circular ImageView -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civrvUserHomeFragmentCategoryImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/noimage"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="26sp"
        />

    <!-- TextView centered below CircularImageView -->
    <TextView
        android:id="@+id/tvrvUserHomeFragmentCategoryname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/civrvUserHomeFragmentCategoryImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Label"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>