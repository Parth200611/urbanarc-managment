<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User.GetCattegoryWiseProductActivity">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search Product"
        android:iconifiedByDefault="false"
        android:layout_marginTop= "66sp"
        android:layout_marginBottom="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/serch"
        android:padding="8dp"
        android:id="@+id/svgetCategorywiseproductsearchproduct"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvgetCategorywiseproductlistofproduct"
        android:layout_margin="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No  Product Avaiable"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:visibility="gone"
        android:id="@+id/tvgetCategorywiseproductnoproductavaiable"
        />

</LinearLayout>